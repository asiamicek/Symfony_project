{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_user_details'|trans({'%id%': user.id|default('')}) }}
{% endblock %}

{% block body %}

    <h2>{{ 'title_user_details'|trans({'%id%': user.id|default('')}) }}</h2>
    {% if user is defined and user|length %}
        <dl>
            <dt>{{ 'label_id'|trans }}</dt>
            <dd>{{ user.id }}</dd>
            <dt>{{ 'label_firstname'|trans }}</dt>
            <dd>{{ user.firstname }}</dd>
            <dt>{{ 'label_lastname'|trans }}</dt>
            <dd>{{ user.lastname }}</dd>
            <dt>{{ 'label_email'|trans }}</dt>
            <dd>{{ user.email }}</dd>
            <dt>{{ 'label_password'|trans }}</dt>
            <dd>{{ user.password }}</dd>
        </dl>
        <p>
            <a href="{{ url('user_index') }}" title="back to the list">
                {{ 'button_back'|trans }}
            </a>
            <a href="{{ url('user_edit', {id: user.id}) }}" title="{{ 'button_edit'|trans }}" id="op">
                {{ 'action_edit'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message_item_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}