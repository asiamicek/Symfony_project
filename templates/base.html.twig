<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <link rel="shortcut icon" href="{{ asset('image/ikona-apka.png') }}">
    <title>{% block title %}Notes organizer{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}" type="text/css">
    {% endblock %}
</head>
<body>
<header>
    {% block header %}
        <img src="{{ asset('image/logo_apka-removebg-preview.png') }}" width:13vw >
        <nav>
            <ul class="vertical-menu">

                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    <li><a href="{{ url('register_index') }}" title="Registers">Registers</a></li>
                    <li><a href="{{ url('note_index') }}" title="Notes">Notes</a></li>
                    <li><a href="{{ url('category_index') }}" title="Categories">Categories</a></li>
                    <li><a href="{{ url('tag_index') }}">Tags</a></li>
                    <br>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li><a href="{{ url('user_index') }}">Dane użytkowników</a></li>
                    {% endif %}
                    <li><a href="{{ url('user_show',{id: app.user.id}) }}"><b>{{ app.user.firstname }}</b><b style="padding-left: 8px;">{{ app.user.lastname }}</b></a></li>
                    <li><a href="{{ url('app_logout') }}">{{ 'action_logout'|trans }}</a></li>
                {% else %}
                    <li><a href="{{ url('app_login') }}">{{ 'action_login'|trans }}</a></li>
                    <li><a href="{{url('registration_signup')}}" title="sign_up">{{ 'sign_up'|trans }}</a></li>
                {% endif %}


            </ul>
        </nav>
{#        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}#}
{#            <div>{{ app.user.email }}</div>#}
{#            <div>#}
{#                <a href="{{ url('app_logout') }}">{{ 'action_logout'|trans }}</a>#}
{#            </div>#}
{#        {% else %}#}
{#            <div>#}
{#                <a href="{{ url('app_login') }}">{{ 'action_login'|trans }}</a>#}
{#            </div>#}
{#        {% endif %}#}
        <br><p id="foot">© Copyright Joanna Micek</p>
    {% endblock %}
</header>

<div class="container-fluid">
    {% for type, messages in app.session.flashBag.all %}
        {% for message in messages %}
            <div class="alert alert-{{ type }}" role="alert">
                {{ message|trans }}
            </div>
        {% endfor %}
    {% endfor %}
    {% block body %}{% endblock %}
</div>
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
{% endblock %}
</body>
</html>
