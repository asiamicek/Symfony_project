{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_task_delete'|trans({'%id%': task.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'task_delete'|trans({'%id%': task.id|default('')}) }}</h1>
    {{ form_start(form, { method: 'DELETE', action: url('task_delete', {id: task.id}) }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_save'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('task_index') }}" class="btn btn-link">
            {{ 'action_back_to_tasks'|trans }}
        </a>
        <br>
        <a href="{{ url('register_index') }}" class="btn btn-link">
            {{ 'action_back_to_registers'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}