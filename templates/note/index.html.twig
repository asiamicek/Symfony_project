{% extends 'base.html.twig' %}

{% block title %}
    Notes list
{% endblock %}

{% block body %}
    <h1>Notes list</h1>
    {% if notes is defined and notes|length %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Created at</th>
                <th>Updated at</th>

                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for note in notes %}
                <tr>
                    <td>{{ note.id }}</td>
                    <td>{{ note.title }}</td>
                    <td>{{ note.createdAt|date('Y/m/d') }}</td>
                    <td>{{ note.updatedAt|date('Y/m/d') }}</td>

                    <td>
                        <a href="{{ url('note_show', {id: note.id}) }}" title="View content">
                            View content
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>
            Empty list!
        </p>
    {% endif %}
{% endblock %}