{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_register_delete'|trans({'%id%': register.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'register_delete'|trans({'%id%': register.id|default('')}) }}</h1>
    {{ form_start(form, { method: 'DELETE', action: url('register_delete', {id: register.id}) }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_save'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('register_index') }}" class="btn btn-link">
            {{ 'action_back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}